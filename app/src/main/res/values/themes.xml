<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dairys" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="background">@color/blue_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BackGround_TopBar">
        <item name="android:background">@drawable/wallpaper_light</item>
    </style>

    <style name="DarkMode_style">
        <item name="android:src">@drawable/ic_dark_mode_dark</item>
    </style>

    <style name="Arrow_style">
        <item name="android:src">@drawable/ic_down_arrow_light</item>
    </style>

    <style name="CustomChipChoiceReallyHappy" parent="">
        <item name="chipBackgroundColor">@color/background_color_really_happy</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>

    <style name="CustomChipChoiceHappy" parent="">
        <item name="chipBackgroundColor">@color/background_color_happy</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>

    <style name="CustomChipChoiceSoSo" parent="">
        <item name="chipBackgroundColor">@color/background_color_so_so</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>

    <style name="CustomChipChoiceBad" parent="">
        <item name="chipBackgroundColor">@color/background_color_bad</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>

    <style name="CustomChipChoiceTerrible" parent="">
        <item name="chipBackgroundColor">@color/background_color_terrible</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>

    <style name="CustomChipChoiceGeneric" parent="">
        <item name="chipBackgroundColor">@color/background_color_generic</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>
    
    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:statusBarColor">@color/blue_500</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/blue_500</item>
        <item name="boxStrokeColor">@color/blue_500</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="DreamCard">
        <item name="background">@color/blue_500</item>
    </style>

    <style name="Base_ToolbarStyle">
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
    </style>

    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="MaterialCardView_style" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="textColorHumorCard" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ExtendedFloatingActionButton_style">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="SplashImage">
        <item name="android:src">@drawable/icon</item>
    </style>

    <style name="Style_babyDoll">
        <item name="fontFamily">@font/baby_doll</item>
    </style>

    <style name="Style_dudu">
        <item name="fontFamily">@font/duducalligraphy</item>
    </style>

    <style name="Style_kg">
        <item name="fontFamily">@font/kg_starting_over</item>
    </style>

    <style name="DreamButton">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="PopupMenu" parent="">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SetTextColorPrimary">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SetTextColorSecondary">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddDream_style">
        <item name="background">@color/white</item>
    </style>

    <style name="SetFoodCardBackground">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="TitleLarge" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="CardTitle" parent="@style/TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>